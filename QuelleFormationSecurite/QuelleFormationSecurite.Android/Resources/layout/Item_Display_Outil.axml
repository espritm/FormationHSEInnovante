<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:textSize="22sp"
    android:gravity="center"
    android:textStyle="bold"
    android:id="@+id/Item_Display_Outil_Textview_Title" />
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:textSize="18sp"
          android:gravity="center"
          android:textColor="@color/black"
          android:text="Objectif" /> 
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Objectif" />    
    </LinearLayout>
</android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:textSize="18sp"
          android:gravity="center"
          android:textColor="@color/black"
          android:text="Pourquoi cet outil" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Pourquoi" />
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:textSize="18sp"
          android:gravity="center"
          android:textColor="@color/black"
          android:text="Informations complÃ©mentaires" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Quel public " />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Public" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Nombre optimal de participants " />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Participants" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Pour quel type d\'entreprise " />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Entreprise" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Moyens techniques " />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Technique" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
          android:background="@color/black" />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Moyens humains " />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:id="@+id/Item_Display_Outil_Textview_Humain" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
          android:background="@color/black" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone"
          android:id="@+id/Item_Display_Outil_Layout_Attention">
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:textSize="16sp"
          android:textStyle="bold"
          android:text="Soyez vigilant sur ces points : " />
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:textSize="16sp"
          android:gravity="center"
          android:inputType="textMultiLine"
          android:id="@+id/Item_Display_Outil_Textview_Attention" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
            android:background="@color/black" />
      </LinearLayout>
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:id="@+id/Item_Display_Outil_Button_ContactUs"
          android:text="@string/Item_Display_Outil_Button_ContactUs"
          android:theme="@style/ButtonGreenBackground" />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>